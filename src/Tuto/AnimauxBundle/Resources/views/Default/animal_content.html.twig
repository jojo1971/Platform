   <article>
            <header>

                {% if link %}
                    <h2><a href="{{ path("tuto_animaux_voir", {id:animal.id}) }}" title=" {{ animal.titre  }}">{{ animal.titre }}</a></h2>
               {% else %}
                   <h2>{{ animal.titre }}</h2>

                {% endif %}

                <div class="admin-animal">
                    <a href="{{ path("tuto_animaux_editer", {id:animal.id}) }}"title="Editer cet animal">Editer</a>
                    <a href="{{ path("tuto_animaux_supprimer", {id:animal.id}) }}"title="Supprimer cet animal">Supprimer</a>
                </div>


                <time>{{ animal.date|date('d/M/Y') }}</time>
                </header>
            <div class="content">
                <img src="{{ animal.url }}" alt="{{ animal.titre }}">
                <p>
                    {{ animal.description|nl2br }}
                </p>
            </div>
   </article>